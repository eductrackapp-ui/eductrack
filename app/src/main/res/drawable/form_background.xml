<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Grande forme violette en bas -->
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
                <solid android:color="#B39DDB" /> <!-- Violet clair -->
            <corners android:bottomLeftRadius="24dp" android:bottomRightRadius="24dp" />
        </shape>
    </item>

    <!-- Cercle orange clair en haut à droite -->
    <item android:top="80dp" android:right="50dp">
        <shape android:shape="oval">
            <solid android:color="#F8B195" /> <!-- Orange doux -->
        </shape>
    </item>

    <!-- Forme bleue en haut à gauche -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#9FA8DA" /> <!-- Bleu-gris clair -->
            <corners android:topLeftRadius="16dp" android:topRightRadius="60dp" />
        </shape>
    </item>

</layer-list>
