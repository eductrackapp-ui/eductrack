<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="40dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Phone Number Display -->
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code sent to +1 234 567 8900"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="32dp" />

        <!-- OTP Input Fields -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:gravity="center">

            <EditText
                android:id="@+id/etOtp1"
                style="@style/OTPEditTextStyle"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etOtp2"
                style="@style/OTPEditTextStyle"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etOtp3"
                style="@style/OTPEditTextStyle"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etOtp4"
                style="@style/OTPEditTextStyle"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etOtp5"
                style="@style/OTPEditTextStyle"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etOtp6"
                style="@style/OTPEditTextStyle" />

        </LinearLayout>

        <!-- Timer Text -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend code in 60s"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="24dp" />

        <!-- Verify Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Verify Code"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#5E17EB"
                android:background="@drawable/button_background"
                android:enabled="false"
                android:alpha="0.5" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:indeterminateTint="#FFFFFF" />

        </RelativeLayout>

        <!-- Resend Code Button -->
        <Button
            android:id="@+id/btnResendCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Resend Code"
            android:textColor="#5E17EB"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="32dp"
            style="?attr/borderlessButtonStyle" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <!-- Help Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Having trouble? Make sure you have a stable internet connection."
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>
</ScrollView>